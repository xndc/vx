{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "VX: Build",
            "type": "shell",
            "command": "bash ${workspaceRoot}/scripts/build.sh",
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "VX: Build & Run",
            "type": "shell",
            "command": "bash ${workspaceRoot}/scripts/build.sh -run",
            "group": "build",
            "problemMatcher": "$gcc",
        },
        {
            "label": "VX: Rebuild",
            "type": "shell",
            "command": "bash ${workspaceRoot}/scripts/build.sh -clean",
            "group": "build",
            "problemMatcher": "$gcc",
        },
    ]
}